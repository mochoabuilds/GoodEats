<% include ../partials/header %>
	
	<style type="text/css">
	    body { padding-top: 70px; }
	    .jumbotron {
	      color: #808080;
	      background: url("https://4.bp.blogspot.com/-SYOzjFdWQic/Ur17xf1SuyI/AAAAAAAALFE/KGquBHkgWjs/s1600/William+J.+McCloskey.+Wrapped+Oranges%252C+1889.jpg");    
		  height: 450px;	
	    }
	</style>
	
	<div class="container">
	     <header class="jumbotron text-center">
	         <div class="container">
	             <h1>GoodEats</h1>
	             <p>
	             	<div class="container" style="max-width: 300px;"> 
	             		   <form action="/recipes" method="GET" class="searchform row">
	                		<div class="form-group">
	                			<input type="text" name="search" class="form-control" value="">
	                			<br>
	                			<input type="submit" class="btn btn-default" value="SEARCH">
	                			 <a class="btn btn-primary" href="/recipes/new">ADD RECIPE</a>
	                		</div>
	                 </form>
	             	</div>
	             </p>
	         </div>
	     </header>
	
	     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
	         <div class="col-lg-12">
	             <% if(noMatch !== null) { %>
	             <h3><%= noMatch %></h3>
	                <p>
	                 <form action="/recipes" method="GET" class="form-inline">
	                		<div class="form-group">
	                			<input type="text" name="search" class="form-control" placeholder="">
	                			<input type="submit" class="btn btn-default" value="Search">
	                		</div>
	                 </form>
	                </p>
	             <% } %>
	         </div>
	         
	        <% recipes.forEach(function(recipe){ %>
	               <div class="col-lg-3 mb-4 col-md-3 col-sm-6 col-xs-12">
	                <div class="thumbnail">
	                   <img src="<%= recipe.image %>">
	                   <div class="caption">
	                       <h4><%= recipe.name %></h4>
	                   </div>
	                   <p>
	                       <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">Learn More!</a>
	                   </p>
	                </div>
	            </div>
	        <% }); %>
	    </div>
	</div>

<p style="text-align: center;">Powered by Ochoa 2019</p>

<br>

<% include ../partials/footer %>  

